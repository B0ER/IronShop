<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Simple</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.SimpleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.Admin_add</servlet-class>

    </servlet>

    <servlet>
        <servlet-name>IronShopMain</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.IronShopMain</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegForm</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.RegForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Basket</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.BasketAct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sign</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.RegisterServlets</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Accept</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.AcceptRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorSign</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.ErrorRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitLogin</servlet-name>
        <servlet-class>ru.IronShop.web.servlets.ExitLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Simple</servlet-name>
        <url-pattern>/simple</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IronShopMain</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegForm</servlet-name>
        <url-pattern>/RegForm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Sign</servlet-name>
        <url-pattern>/Sign</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Accept</servlet-name>
        <url-pattern>/Accept</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorSign</servlet-name>
        <url-pattern>/ErrorSign</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Basket</servlet-name>
        <url-pattern>/BasketAct</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ExitLogin</servlet-name>
        <url-pattern>/ExitLogin</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.mysql</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
</web-app>